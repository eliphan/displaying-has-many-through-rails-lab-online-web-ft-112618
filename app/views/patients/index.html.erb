<ul>
<% @patients.each do |patient| %>
  <li>Name: <%= patient.name %>
  <br>
  Number of Appointments: <%= patient.appointments.count %>
   <% patient.appointments.each do |appointment| %>
       <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %>
       <% end %>
   </li><br><br>
  <% end %>
</ul>


